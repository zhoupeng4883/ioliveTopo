<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false">
	<s:states>
		<s:State name="normal"/>
		<s:State name="selected"/>
		<s:State name="hovered"/>
	</s:states>
	<s:BorderContainer width="60" height="60" backgroundColor="0xFFEEC2" backgroundAlpha="0" backgroundAlpha.hovered="1"
					   borderColor="0x2A66C9" borderVisible="false" borderVisible.hovered="true" toolTip="{data.toolTip}">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
		</s:layout>
		<s:Image id="img" source="{data.icon}" maxWidth="60" maxHeight="60"/>
	</s:BorderContainer>
</s:ItemRenderer>